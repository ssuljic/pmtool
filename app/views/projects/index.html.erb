<%= render 'shared/header' %>

<div class="container" id="dashboard">
	<div class="row">
		<div class="col-md-3">
			<%= render 'shared/sidebar' %>
		</div>
		<div class="col-md-9">
			<div class="col-md-6">
				<h3>My tasks</h3>
				<% @tasks.each do |task| %>
					<div class="panel panel-primary">
					  <div class="panel-heading"><%= task.name %></div>
					  <div class="panel-body">
					  	Project: <%= task.activity.project.name %><br>
					    Activity: <%= task.activity.name %>
					    <br><br>
					    <%= task.description %>
					    <br>
					    <div class="progress">
							  <div class="progress-bar" role="progressbar" aria-valuenow="<%= task.status %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= task.status %>%;">
							    <%= task.status %>%
							  </div>
							</div>
							<%= link_to 'Edit task', edit_task_path(activity_id: task.activity.id, id: task.id) %>
					  </div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>