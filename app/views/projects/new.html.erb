<%= render 'shared/header' %>

<div class="container" id="new_project_form">
	<div class="row">
		<div class="col-md-3">
			<%= render 'shared/sidebar' %>
		</div>
		<div class="col-md-9">
			<div class="col-md-6">
				<div class="container-fluid">
					<%= form_for @project, :html => {:class => 'form'} do |f| %>
						<h5><%= link_to "HOME", projects_path %> > CREATE NEW PROJECT</h5>
						<div class="form-group">
							<%= f.label :name %>
							<%= f.text_field :name, class: "form-control" %>
						</div>
						<% if @project.errors.any? %>
					      <% @project.errors[:name].each do |error| %>
					      	<div class="alert alert-danger" id="error" role="alert"><span class="glyphicon glyphicon-remove-circle">&nbsp;</span><%= error %></div>
					      <% end %>
					   <% end %>

						<div class="form-group">
							<%= f.label :short_description %>
							<%= f.text_area :short_description, class: "form-control" %>
						</div>
						<% if @project.errors.any? %>
					      <% @project.errors[:short_description].each do |error| %>
					      	<div class="alert alert-danger" id="error" role="alert"><span class="glyphicon glyphicon-remove-circle">&nbsp;</span><%= error %></div>
					      <% end %>
					  <% end %>

						<div class="form-group">
							<%= f.label :long_description %>
							<%= f.text_area :long_description, class: "form-control" %>
						</div>

						<div class="form-group">
							<%= f.label :start_date %>
							<%= f.text_field :start_date, class: "form-control", id:"datepicker" %>
						</div>
						<% if @project.errors.any? %>
					      <% @project.errors[:start_date].each do |error| %>
					      	<div class="alert alert-danger" id="error" role="alert"><span class="glyphicon glyphicon-remove-circle">&nbsp;</span><%= error %></div>
					      <% end %>
					  <% end %>

						<div class="form-group">
							<%= f.label :end_date %>
							<%= f.text_field :end_date, class: "form-control", id:"datepicker_end" %>
						</div>
						<% if @project.errors.any? %>
					      <% @project.errors[:end_date].each do |error| %>
					      	<div class="alert alert-danger" id="error" role="alert"><span class="glyphicon glyphicon-remove-circle">&nbsp;</span><%= error %></div>
					      <% end %>
					  <% end %>

						<div class="form-group">
							<%= f.label :duration %>
							<%= f.number_field :duration, class: "form-control", min: "0"%>
						</div>
						<% if @project.errors.any? %>
					      <% @project.errors[:duration].each do |error| %>
					      	<div class="alert alert-danger" id="error" role="alert"><span class="glyphicon glyphicon-remove-circle">&nbsp;</span><%= error %></div>
					      <% end %>
					  <% end %>

						<div class="form-group">
							<%= f.label :member_count %>
							<%= f.number_field :member_count, class: "form-control", min: "0" %>
						</div>

						<div class="form-group">
							<%= f.label :budget %>
							<%= f.number_field :budget, class: "form-control", min: "0", step: "0.1" %>
						</div>


						<%= f.submit "Create project", class: "btn btn-default" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>