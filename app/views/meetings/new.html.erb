<%= render 'shared/header' %>

<div class="container" id="new_project_form">
	<div class="row">
		<div class="col-md-3">
			<%= render 'shared/sidebar' %>
		</div>
		<div class="col-md-9">
			<div class="col-md-6">
				<div class="container-fluid">
					<%= form_for @meeting, :url => project_meetings_path do |f| %>
						<div class="form-group">
							<%= f.label :description %>
							<%= f.text_field :description, class: "form-control" %>
						</div>

						<div class="form-group">
							<span class='glyphicon glyphicon-map-marker'>&nbsp;</span><%= f.label :location %>
							<%= f.text_field :location, class: "form-control" %>
						</div>

						<%= f.submit "Next", class: "btn btn-default" %>
					<% end %>
				</div>
			</div>
	</div>
</div>