<%= render 'shared/header' %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<%= render 'shared/sidebar' %>
		</div>
		<div class="col-md-9" id="edit_activity">
			<% if flash[:error] %>
				<div class="alert alert-danger" role="alert"><%= flash[:error] %></div>
			<% end %>
			<div class="col-md-6">
				<div class="container-fluid">
					<%= form_for @activity, :url => project_activity_path, :html => {:method => :put, :class => 'form'} do |f| %>
						<div class="form-group">
							<%= f.label :name %>
							<%= f.text_field :name, class: "form-control" %>
						</div>

						<div class="form-group">
							<%= f.label :description %>
							<%= f.text_area :description, class: "form-control" %>
						</div>

						<div class="form-group">
							<%= f.label :duration %>
							<%= f.number_field :duration, class: "form-control" %>
						</div>

						<div class="form-group">
							<%= f.label :finished %>
							<%= f.check_box :finished %>
						</div>

						<%= f.submit "Update activity", class: "btn btn-default" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>